@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h2>Edit</h2>

<h4>Edit this student: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name, new { required = "required" })

  <label for="Date Enrolled">Date Enrolled:</label>
  @Html.EditorFor(model => model.DateEnrolled)

  <input type="submit" value="Save">
}

<p>@Html.ActionLink("Back to student list", "Index")</p>